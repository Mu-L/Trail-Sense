<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:singleLineTitle="false"
        app:title="@string/maps">

        <SwitchPreferenceCompat
            android:title="@string/pref_navigation_lock_screen_when_open_title"
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="@string/pref_map_keep_unlocked"
            app:singleLineTitle="false" />

        <SwitchPreferenceCompat
            android:title="@string/remember_map_state"
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="@string/pref_save_map_state"
            app:singleLineTitle="false" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/pref_map_layer_button"
            app:singleLineTitle="false"
            app:title="@string/layers" />
    </PreferenceCategory>
</PreferenceScreen>